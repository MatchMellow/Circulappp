<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#004AAD</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorPrimaryVariant">#003B8F</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">#004AAD</item>

        <item name="android:colorBackground">@color/azul</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/azul</item>
        <item name="windowSplashScreenIconBackgroundColor">#004AAD</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icone_para_fundo</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

</resources>